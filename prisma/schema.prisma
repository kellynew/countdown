generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./countdown.db"
}

model Countdown {
  id          Int      @id @default(autoincrement())
  title       String
  targetDate  DateTime
  backgroundColor String?
  backgroundImage String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}